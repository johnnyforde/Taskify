<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:layout_width="82dp"
            android:layout_height="100dp"
            android:id="@+id/imageButton11"
            android:src="@drawable/calselect"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/imageButton13" />

        <ImageButton
            android:layout_width="82dp"
            android:layout_height="100dp"
            android:id="@+id/imageButton12"
            android:src="@drawable/mic1"
            android:layout_alignTop="@+id/imageButton11"
            android:layout_toEndOf="@+id/imageButton11" />

        <ImageButton
            android:layout_width="82dp"
            android:layout_height="100dp"
            android:id="@+id/imageButton13"
            android:layout_alignBottom="@+id/imageButton11"
            android:layout_alignParentStart="true"
            android:src="@drawable/note1" />

        <ImageButton
            android:layout_width="82dp"
            android:layout_height="100dp"
            android:id="@+id/imageButton14"
            android:src="@drawable/guy1"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/imageButton12" />

        <ImageButton
            android:layout_width="82dp"
            android:layout_height="100dp"
            android:id="@+id/imageButton15"
            android:layout_alignBottom="@+id/imageButton14"
            android:layout_toEndOf="@+id/imageButton14"
            android:src="@drawable/settings1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:src="@drawable/todaystasks"
            android:layout_above="@+id/imageButton11"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/textView38"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_toStartOf="@+id/imageButton11"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/textView39"
            android:layout_alignTop="@+id/textView38"
            android:layout_toEndOf="@+id/imageButton13"
            android:layout_marginStart="38dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/textView40"
            android:layout_alignTop="@+id/textView39"
            android:layout_toEndOf="@+id/textView39"
            android:layout_marginStart="38dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/textView41"
            android:layout_alignTop="@+id/textView40"
            android:layout_toEndOf="@+id/imageButton14" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:src="@drawable/header1"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageButton16"
            android:src="@drawable/greater"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="17dp" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageButton17"
            android:src="@drawable/less"
            android:layout_alignBottom="@+id/imageButton16"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</LinearLayout>
